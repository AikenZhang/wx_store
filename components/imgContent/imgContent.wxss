@import "../../app.wxss";
.imgContent{
  width:100%;
  height:620rpx;
  border:1rpx solid #d2d2d2;
  border-radius:10rpx;
  overflow: hidden;
  background: #fefefe;
}
.goods-tag{
  display:flex;
  height:50rpx;
  width:100%;
  justify-content: flex-start;
  flex-flow:wrap;
}
.goods-tag span{
  margin:5rpx;
  padding: 5rpx;
  font-size:10px;
  background: #f1f2f6;
  color:#666;
}
.imgContent image{
  width:100%;
  height: 450rpx;
}
.goods-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  height:50rpx;
}
.goods-title {
  font-size:12px;
  height:50rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  color:#666;
}
.goods-price{
  font-size:14px;
}
.goods-start{
  color:#ffda79;
}