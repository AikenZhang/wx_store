/* pages/leftSlide/leftSlide.wxss */

.item-wrapper{
    width: 100%; 
    overflow: hidden;
}

.item-list{
    position: relative;
    width: 100%;
    min-height: 250rpx;
    margin-bottom: 15rpx;
}

.item-info, .item-oper{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.item-info{
    display: flex;
    padding: 20rpx 20rpx 20rpx 0;
    z-index: 2;
    background: white;
    transition: left 0.2s ease-in-out;
}

.item-list:first-child{
    border-top: 1px solid #ccc;
}

.item-oper{
    display: flex;
    justify-content: flex-end;
}

.oper-delete{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    z-index: 1;
    color: white;
    background: red;
}

.info-img{
    width: 100rpx;
    height: 100rpx;
}

.info-wrapper{
    margin-left: 20rpx;
    width: 588rpx;
}

.info-desc{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 6rpx;
}

.info-desc .name{
    font-size: 32rpx;
    color: black;
    font-weight: 600;
}

.info-desc .time{
    font-size: 24rpx;
    color: #999;
}

.info-content{
    font-size: 28rpx;
    color: #999;
    margin-top: 4rpx;
}
@import "../../app.wxss";
.fy-shopCar-item{
  display: flex;
  width:100%;
  height:300rpx;
  align-items: center;
}
.fy-shopCar-item image{
  width:270rpx;
  border-radius: 5rpx;
}
.fy-shopCar-item-sel{
  padding: 0 15rpx;
}
.fy-shopCar-item-info{
  height: 90%;
  padding: 0 15rpx;
