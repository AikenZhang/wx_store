/* pages/logion/logion.wxss */
.login{
  position: absolute;
  left:0;
  right: 0;
  bottom: 0;
  top:0;
}
.login-content{
  display: flex;
  justify-content: center;
  align-items: center;
  width:100%;
  height:50%;
  color: #333;
}
.login-content image{
  width:400rpx;
  height:400rpx;
}
.img image{
  width:100%;
  height:100%;
}
.login-mask {
  position: absolute;
  left:0;
  right: 0;
  bottom: 0;
  top:0;
  z-index: 99;
  background:#f2f2f2;
}
.login-mask-logo {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 300rpx;
}
.login-mask-logo image{
  width:200rpx;
  height: 200rpx;
  border-radius: 200rpx;
}
.button{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  border-radius: 150rpx;
  line-height: 150rpx;
  background: #f981a7;
  color: #fff;
  font-size: 14px;
}