/* pages/shopCar/shopCar.wxss */
.fy-shopCar{
  height: 100%;
}
.fy-shopCar-head{
  width:100%;
  height:5%;
  background: #fff;
  display: flex;
  justify-content: flex-end;
  color: #666;
  font-size:14px;
  align-items: center;
}
.fy-shopCar-content{
  width:100%;
  height:86%;
  margin-top:1%;
  background: #fff;
}
.fy-shopCar-head span{
  padding-right: 20rpx;
}
.fy-shopCar-bottom{
  display: flex;
  width:100%;
  height: 8%;
  position: fixed;
  bottom:0;
  left: 0;
  background: #f6f6f6;
  font-size:16px;
  justify-content: space-between;
  align-items: center;
  color: #666;
}
.fy-shopCar-bottom span{
  padding:0 15rpx;
}
.fy-shopCar-bottom-select,.fy-shopCar-bottom-js{
  display: flex;
  height: 100%;
}
.fy-shopCar-bottom-select{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:150rpx;
}
.fy-shopCar-bottom-sum{
  width:150rpx;
  height:100%;
  line-height: 80rpx;
  text-align: left;
}
.fy-shopCar-bottom-buy{
  width:200rpx;
  height: 100%;
  line-height: 80rpx;
  color: #666;
  text-align: center;
  background: #F7DC6F;
}